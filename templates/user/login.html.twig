{% extends 'base.html.twig' %}

{% block title %}Login!{% endblock %}

{% block body %}
    <div class="w-25 m-auto">
        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
                <label for="exampleInputName">Login</label>
                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="NameHelp" placeholder="Login">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword">Hasło</label>
                <input type="password" class="form-control" id="exampleInputPassword" placeholder="Hasło">
            </div>
            <button type="submit" class="btn btn-primary">Zaloguj</button>
        </form>
    </div>
{% endblock %}
