{% extends 'base.html.twig' %}

{% block title %}Login!{% endblock %}

{% block body %}

    <div class="container">

    {% if errors %}
        <br>

        <div class="alert alert-danger" role="alert">
            Nieprawidłowy login lub hasło
        </div>
    {% endif %}
        <br>

        <div class="w-25 m-auto">
            <form action="{{ path('login') }}" method="post">
                <div class="form-group">
                    <label for="exampleInputName">Login</label>
                    <input type="text" name="login" class="form-control" required="required" id="exampleInputEmail1" aria-describedby="NameHelp" placeholder="Login">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword">Hasło</label>
                    <input type="password" name="password" class="form-control" required="required" id="exampleInputPassword" placeholder="Hasło">
                </div>
                <button type="submit" class="btn btn-primary">Zaloguj</button>
            </form>

        </div>

    </div>

{% endblock %}
